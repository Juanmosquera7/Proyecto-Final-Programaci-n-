<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/javafx"
      fx:controller="co.edu.uniquindio.alojamiento.controladores.RecuperarContrasenaControlador"
      prefHeight="300.0" prefWidth="350.0" alignment="center" spacing="20.0" style="-fx-padding: 20;">

    <!-- Título -->
    <Label text="Recuperar Contraseña">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <!-- Campo de correo -->
    <TextField fx:id="txtCorreo" promptText="Ingresa tu correo electrónico" minHeight="30.0" />

    <!-- Botón para recuperar contraseña -->
    <Button text="Recuperar Contraseña" onAction="#recuperarContrasena" minHeight="40.0" minWidth="150.0" />
</VBox>

