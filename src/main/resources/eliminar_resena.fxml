<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.alojamiento.controladores.EliminarResenaControlador"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <!-- Título -->
        <Label text="Eliminar Reseña" layoutX="20.0" layoutY="20.0" style="-fx-font-size: 18px;" />

        <!-- ComboBox para seleccionar reseña -->
        <Label text="Seleccione la reseña:" layoutX="20.0" layoutY="80.0" />
        <ComboBox fx:id="comboBoxResenas" layoutX="150.0" layoutY="75.0" prefWidth="300.0" />

        <!-- Botón para eliminar -->
        <Button fx:id="btnEliminarResena" text="Eliminar Reseña" layoutX="150.0" layoutY="120.0"
                onAction="#eliminarResena" />

        <!-- Mensaje para información -->
        <Text fx:id="mensaje" layoutX="20.0" layoutY="180.0" wrappingWidth="560.0" />

    </children>
</AnchorPane>


