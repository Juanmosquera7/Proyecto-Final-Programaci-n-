<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="20.0"
      fx:controller="co.edu.uniquindio.alojamiento.controladores.AlojamientosControlador">

    <Label text="Lista de Alojamientos" textFill="#0f0f0f">
        <font>
            <Font size="20.0"/>
        </font>
    </Label>

    <TableView fx:id="tablaAlojamientos" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNombre" text="Nombre" />
            <TableColumn fx:id="colCiudad" text="Ciudad" />
            <TableColumn fx:id="colPrecio" text="Precio por Noche" />
            <TableColumn fx:id="colCapacidad" text="Capacidad" />
            <TableColumn fx:id="colTipo" text="Tipo de Alojamiento" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>



